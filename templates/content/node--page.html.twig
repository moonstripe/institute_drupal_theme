<div class="relative w-full shadow pb-24 ">
    <div class="absolute top-0 left-0 h-[200px] flex flex-col w-full border-black ">
        {% if content.field_main_image %}
            {% set image = content.field_main_image['#items'][0] %}
            <img src="{{ file_url(image.entity.uri.value) }}"
                 alt="{{ image.alt }}"
                 loading="lazy"
                 class="object-cover w-full h-full opacity-30 absolute" />
        {% endif %}
    </div>
    <div class="absolute w-full top-[150px]">
        <h2 class="text-2xl font-mono font-bold w-5/6 md:w-2/3 mx-auto">{{ content.body['#object'].title.value }}</h2>
    </div>
    <div class="relative top-[50px] left-0 prose-md text-light w-4/5 md:w-2/3 mx-auto  pt-[200px] ">
        {{ content.body }}
    </div>
</div>
