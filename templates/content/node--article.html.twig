<article class="w-full flex flex-col min-h-screen">
    {# Display the title #}
    {% if not page %}
        <h2 {{ title_attributes }}>
            <a href="{{ url }}">{{ label }}</a>
        </h2>
        <div>
            <div>{{ content.body }}</div>
        </div>
    {% else %}
        <div class="relative w-full flex flex-col ">
            <div class="absolute top-0 left-0 h-[200px] flex flex-col w-full">
                {% if content.field_image %}
                    {% set image = content.field_image['#items'][0] %}
                    <img src="{{ file_url(image.entity.uri.value) }}"
                         alt="{{ image.alt }}"
                         loading="lazy"
                         class="object-cover w-full h-full opacity-30 absolute" />
                {% endif %}
                {# Metadata: Author and date #}
                <div class="flex flex-col w-5/6 md:w-2/3 mx-auto mt-10">
                    <h2 class="text-2xl font-mono font-bold">{{ content.body['#object'].title.value }}</h2>
                    {% if display_submitted %}
                        <span class="node__author">{{ author_name }}</span>
                        <span class="node__date">{{ date }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
</article>
